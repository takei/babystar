<% content_for :container do %>

<h2>Welcome!</h2>

<%= link_to(raw('<i class="icon-file"></i>') + " 新規テーマ作成", new_theme_path, {:class => 'btn'}) %>

<h3>現在のテーマ一覧</h3>

<table class="table table-striped">
  <tr>
    <th>テーマタイトル</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @themes.each do |theme| %>
  <tr>
    <td><%= theme.name %></td>
    <td><%= link_to 'Show', theme %></td>
    <td><%= link_to 'Edit', edit_theme_path(theme) %></td>
    <td><%= link_to 'Destroy', theme, method: :delete, data: { confirm: '削除しますか?' } %></td>
  </tr>
<% end %>
</table>

<br />

<% end %> <!-- :container end-->